<%= simple_form_for @article, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :body %>
<br>
    <%= f.file_field :article_image %>

    <%= f.input :published %>

    <%= f.input :featured %>

    <%= f.input :tag_list %>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
