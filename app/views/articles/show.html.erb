<h3>
  <%= @article.title %>
</h3>
<p>
  Posted <%= time_ago_in_words(@article.created_at) %> ago by <%= @article.user.name %>
</p>
<hr>
<% if !@article.article_image_url.to_s.empty? %>
<p><%= image_tag @article.article_image_url.to_s %></p>
<% end %>
<p>
  <%= simple_format(@article.body) %>
</p>

<% unless @article.tag_list.empty? %>
<div class="sidebox">
    <p>Tags: <%= raw @article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
</div>
<% end %>

<% if @article.user_id == current_user.id %>
<div class="text-right">
<table>
      <tr>
        <td><%= link_to 'Edit my article', edit_article_path(@article), class: 'btn btn-info' %> </td>
        <td></td>
        <td><%= link_to 'Delete this article', {:controller=>:articles,:action=>:destroy, :id=>@article}, class: 'btn btn-danger', :method=>:delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
 </table>
</div>
<% end %>

<hr>
<%= render 'layouts/structure/disqus' %>