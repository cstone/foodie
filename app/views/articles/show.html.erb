<h3>
  <%= @article.title %>
</h3>
<p>
  Posted <%= time_ago_in_words(@article.created_at) %> ago by <%= @article.user.name %>
</p>
<hr>
<p>
  <%= simple_format(@article.body) %>
</p>

<div class="sidebox">
<% unless @article.tag_list.empty? %>
    <p>Tags: <%= raw @article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
<% end %>
</div>

<% if @article.user_id == current_user.id %>
<div class="text-right sidebox">
<table>
      <tr>
        <td><%= link_to 'Edit my article', edit_article_path(@article) %> |</td>
        <td><%= link_to 'Back to articles', articles_path %> |</td>
        <td><%= link_to 'Destroy', {:controller=>:articles,:action=>:destroy, :id=>@article}, :method=>:delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
 </table>
</div>
<% end %>

<hr>
<%= render 'layouts/structure/disqus' %>