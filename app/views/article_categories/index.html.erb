<h1>Listing article_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @article_categories.each do |article_category| %>
  <tr>
    <td><%= article_category.name %></td>
    <td><%= article_category.status %></td>
    <td><%= link_to 'Show', article_category %></td>
    <td><%= link_to 'Edit', edit_article_category_path(article_category) %></td>
    <td><%= link_to 'Destroy', article_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

