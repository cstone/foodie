<div class="row sidebox">
  <h4>Sign In</h4>
  <%= simple_form_for("user", :url => user_session_path, :html => { :class => 'form-horizontal'}) do |f| %>
      <%= f.text_field :email, placeholder: 'Email Address', :class => 'form-control' %><br>
      <%= f.password_field :password, placeholder: 'Password', :class => 'form-control' %><br>
      <%= f.submit 'Sign in', :class => 'btn btn-info btn-block' %>
      <%= link_to 'Join', new_user_registration_path, :class => 'btn btn-success btn-block' %>
      <hr>
     <p><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %></p>
     <p><%= link_to "Forgot your password?", new_password_path('user') %></p>
  <% end %>
</div>

