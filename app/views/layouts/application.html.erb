          <img src="https://storage.googleapis.com/support-kms-prod/SNP_2922333_en_v0" alt="" height="auto">
        </div>
          <%= render 'layouts/structure/recentfeaturedpost' %>
        <div class="row text-center">
          <img src="https://storage.googleapis.com/support-kms-prod/SNP_2922347_en_v0" alt="" height="auto">
        </div>
      </div>
      <!-----------------------------------------------
      -------------------------------------------------
      -------------------------------------------------
                      END RIGHT COLUMN
