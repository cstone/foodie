<% @articles.each do |article| %>
    <h4><%= link_to_unless_current article.title, article %></h4>
    <p>Posted <%= time_ago_in_words(article.created_at) %> ago by <%= link_to article.user.name, profile_path(article.user) %> in  <%= link_to article.article_category.name, category_path(article.article_category.name) %></p>
    <p><%= truncate(simple_format(article.body), length: 400).html_safe %></p>
    <% unless article.tag_list.empty? %>
        <p class="sidebox">Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
    <% end %>
    <hr>
<% end %>
<%= paginate @articles %>
